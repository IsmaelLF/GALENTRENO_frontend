---
// src/layouts/BaseLayout.astro
const { title } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style is:global>
      body {
        font-family: BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial,
          sans-serif;
        background-color: #f4f5f7;
        margin: 0;
        padding: 1.5rem;
        color: #172b4d;
      }

      h1 {
        font-size: 2rem;
        font-weight: 600;
        text-align: center;
      }
      h2 {
        font-size: 1.2rem;
        font-weight: 500;
        margin-top: 2rem;
        margin-bottom: 1rem;
        color: #5e6c84;
      }
      small {
        color: #5e6c84;
        font-weight: 500;
      }

      .card {
        background-color: white;
        padding: 1rem;
        border-radius: 12px;
        text-align: center;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        border: 1px solid rgba(0, 0, 0, 0.05);
      }
      .card strong {
        font-size: 1.5rem;
        display: block;
        margin-bottom: 0.25rem;
      }
      .stats-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        margin: 1.5rem 0;
      }

      .button {
        border: none;
        padding: 1em;
        margin: 1rem auto;
        width: 100%;
        background-color: #112f63;
        color: white;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        text-align: center;
        display: block;
        text-decoration: none;
      }

      .button-register {
        background-color: hsl(218, 56%, 32%);
        color: white;
        width: 20%;
      }

      .button-login {
        background-color: hsl(218, 56%, 32%);
        color: white;
        width: 20%;
      }
      a {
        color: #ffffff;
        text-decoration: none;
      }

      .session-item {
        background-color: white;
        padding: 1rem;
        border-radius: 12px;
        margin-bottom: 0.75rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        border: 1px solid rgba(0, 0, 0, 0.05);
      }

      input[type="text"],
      input[type="email"],
      input[type="password"] {
        width: 100%;
        padding: 0.75rem;
        border-radius: 8px;
        border: 1px solid #dfe1e6;
        font-size: 1rem;
        box-sizing: border-box;
        margin-top: 0.25rem;
      }

      label {
        font-weight: 600;
        color: #172b4d;
      }
      form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin: 0 auto;
        width: 40%;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
